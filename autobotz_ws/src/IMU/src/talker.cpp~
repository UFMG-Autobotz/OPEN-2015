#include "ros/ros.h"
//#include "std_msgs/String.h"
#include <std_msgs/UInt16.h>
#include <sstream>


int main(int argc, char **argv)
{

  ros::init(argc, argv, "talker");
  ros::NodeHandle n;


  ros::Publisher chatter_pub = n.advertise<std_msgs::UInt16>("servo", 1000);

  ros::Rate loop_rate(10);

  int count = 0;
  while (count < 200)
  {
    std_msgs::UInt16 msg;
    msg.data = count;
  
    ROS_INFO("Publicando %d mensagens!", msg.data);

    chatter_pub.publish(msg);

    ros::spinOnce();

    loop_rate.sleep();
    count = count + 1;
  }
  return 0;
}
